<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/picker_timer"
        android:fontFamily="sans-serif-light"
        android:id="@+id/textViewTitle"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp" />

    <View
        android:id="@+id/info_divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/default_divider_color_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/medium_font_padding"
        android:paddingLeft="@dimen/timer_padding_left"
        android:paddingTop="@dimen/medium_font_padding">

        <com.codetroopers.betterpickers.hmspicker.HmsView
            android:id="@+id/hms_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:baselineAligned="true"
            android:gravity="top"
            android:paddingBottom="@dimen/medium_font_padding"
            android:paddingLeft="@dimen/timer_padding_left"
            android:paddingTop="@dimen/medium_font_padding">

            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/hours_tens"
                style="@style/medium_bold_hms"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:ellipsize="none"
                android:gravity="center"
                android:maxLines="1"
                android:text="0" />

            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/hours_ones"
                style="@style/medium_bold_hms"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:ellipsize="none"
                android:gravity="center"
                android:maxLines="1"
                android:text="0" />

            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/hours_label"
                style="@style/medium_bold_hms_separator"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:ellipsize="none"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/time_separator" />

            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/minutes_tens"
                style="@style/medium_bold_hms"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:ellipsize="none"
                android:gravity="center"
                android:maxLines="1"
                android:text="0" />

            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/minutes_ones"
                style="@style/medium_bold_hms"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:ellipsize="none"
                android:gravity="center"
                android:maxLines="1"
                android:text="0" />

            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/minutes_label"
                style="@style/medium_bold_hms_separator"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:ellipsize="none"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/time_separator" />

            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/seconds_tens"
                style="@style/medium_light_hms"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0" />
            <!-- <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/minutes_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="none"
                style="@style/label"
                android:gravity="top"
                android:text="@string/ms_picker_minutes_label"/> -->
            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/seconds_ones"
                style="@style/medium_light_hms"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_alignBaseline="@+id/minutes_tens"
                android:text="7" />
            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/seconds_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="none"
                style="@style/label"
                android:gravity="top"
                android:visibility="gone"
                android:text=""/>
            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/minus_label"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:gravity="top"
                android:maxLines="1"
                android:text="@string/number_picker_minus_label" />
        </com.codetroopers.betterpickers.hmspicker.HmsView>

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/key_background_dark"
            android:contentDescription="@string/timer_delete"
            android:gravity="center"
            android:scaleType="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/ic_backspace_normal_light" />
    </LinearLayout>
    <View
        android:id="@+id/dividerHms"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/default_divider_color_light"/>

    <include
        layout="@layout/three_keys_view"
        android:id="@+id/first"/>
    <include
        layout="@layout/three_keys_view"
        android:id="@+id/second"/>
    <include
        layout="@layout/three_keys_view"
        android:id="@+id/third"/>
    <include
        layout="@layout/three_keys_view"
        android:id="@+id/fourth"/>
</LinearLayout>
