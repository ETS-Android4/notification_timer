<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="medium_bold">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="medium_bold_hms" parent="medium_bold">
        <item name="android:textSize">@dimen/medium_font_size_hms</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="medium_bold_hms_separator" parent="medium_bold">
        <item name="android:textSize">@dimen/medium_font_size_hms_separator</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>
    <style name="medium_light">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="medium_light_hms" parent="medium_light">
        <item name="android:textSize">@dimen/medium_font_size_hms</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="label">
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="dialpad">
        <item name="android:textSize">@dimen/dialpad_font_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingTop">@dimen/dialpad_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/dialpad_padding_top_bottom</item>
    </style>
    <style name="dialpad_text" parent="dialpad">
        <item name="android:textSize">@dimen/dialpad_font_size_ampm</item>
    </style>


    <style name="bp_ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/bp_material_button_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="bp_ActionButton.Text">
        <item name="android:textSize">@dimen/bp_material_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">@dimen/bp_material_button_minwidth</item>
        <item name="android:paddingLeft">@dimen/bp_material_button_textpadding_horizontal</item>
        <item name="android:paddingRight">@dimen/bp_material_button_textpadding_horizontal</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>