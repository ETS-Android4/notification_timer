<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:useLevel="false"
            android:thickness="@dimen/timer_progressbar_thickness_background">
            <corners android:radius="50dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:useLevel="true"
            android:shape="ring"
            android:innerRadiusRatio="@dimen/timer_progressbar_inner_radius_ready"
            android:thickness="@dimen/timer_progressbar_thickness_ready">
            <solid android:color="@color/timer_progressbar_ready" />
        </shape>
        <scale
            android:drawable="@drawable/round_progressbar"
            android:scaleWidth="98%" />
    </item>
</layer-list>