<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/picker_timer"
        android:fontFamily="sans-serif-light"
        android:id="@+id/textViewTimerText"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp" />

    <View
        android:id="@+id/info_divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/default_divider_color_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/medium_font_padding"
        android:paddingBottom="@dimen/medium_font_padding"
        android:paddingLeft="@dimen/timer_padding_left"
        android:gravity="center">
        <com.codetroopers.betterpickers.mspicker.MsView
            android:id="@+id/ms_text"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/medium_font_padding"
            android:paddingBottom="@dimen/medium_font_padding"
            android:paddingLeft="@dimen/timer_padding_left"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="top">
            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/minutes_tens"
                android:maxLines="1"
                android:ellipsize="none"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/medium_bold_ms"
                android:text="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/minutes_ones"
                android:maxLines="1"
                android:ellipsize="none"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/medium_bold_ms"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="0"/>
            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/minutes_label"
                android:maxLines="1"
                android:ellipsize="none"
                style="@style/medium_bold_ms"
                android:gravity="top"
                android:text="@string/time_separator"
                android:layout_gravity="center_vertical"
                android:layout_height="35dp"
                android:layout_width="wrap_content" />
            <!-- <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/minutes_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="none"
                style="@style/label"
                android:gravity="top"
                android:text="@string/ms_picker_minutes_label"/> -->
            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/seconds_tens"
                android:maxLines="1"
                android:ellipsize="none"
                style="@style/medium_light_ms"
                android:gravity="center"
                android:text="0"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/seconds_ones"
                android:maxLines="1"
                android:ellipsize="none"
                style="@style/medium_light_ms"
                android:gravity="center"
                android:text="7"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <!-- <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/seconds_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="none"
                style="@style/label"
                android:gravity="top"
                android:text="@string/ms_picker_seconds_label"/> -->
            <com.codetroopers.betterpickers.widget.ZeroTopPaddingTextView
                android:id="@+id/minus_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="none"
                style="@style/label"
                android:gravity="top"
                android:text="@string/number_picker_minus_label"/>
        </com.codetroopers.betterpickers.mspicker.MsView>
        <ImageButton
            android:id="@+id/delete"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:scaleType="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/ic_backspace_normal_light"
            android:background="@drawable/key_background_dark"
            android:contentDescription="@string/timer_delete"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/default_divider_color_light"/>
    <include
        layout="@layout/three_keys_view"
        android:id="@+id/first"/>
    <include
        layout="@layout/three_keys_view"
        android:id="@+id/second"/>
    <include
        layout="@layout/three_keys_view"
        android:id="@+id/third"/>
    <include
        layout="@layout/three_keys_view"
        android:id="@+id/fourth"/>
</LinearLayout>
