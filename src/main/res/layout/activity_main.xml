<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simpleworkout.timer.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"/>

    <RelativeLayout
        android:id="@+id/layoutActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionBar">

        <TextView
            android:id="@+id/textViewEmptyPresets"
            android:layout_width="match_parent"
            android:layout_height="@dimen/preset_card_total_height"
            android:text="@string/presetsListEmpty"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:visibility="gone"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:background="@color/preset_fragment_background"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/presetsListEmpty" />

        <!-- Preset timers -->
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/fragmentContainerPresetCards"
            android:layout_width="match_parent"
            android:layout_height="@dimen/preset_card_total_height"
            android:paddingStart="@dimen/preset_card_margin_side"
            android:paddingEnd="@dimen/preset_card_margin_side"
            android:visibility="visible"
            android:layout_below="@+id/textViewEmptyPresets"
            android:backgroundTintMode="screen"
            android:elevation="2dp"
            android:background="@color/preset_fragment_background"
            tools:context=".MainActivity">
        </FrameLayout>

        <!-- scaleX = 1.275 on nexus 6P -->
        <ProgressBar
            android:id="@+id/timerProgressBar"
            android:scaleY="200"
            android:scaleX="1.275"
            android:rotation="90"
            android:visibility="visible"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fragmentContainerPresetCards"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressTint="@color/bpRed"
            android:backgroundTint="@color/colorPrimary"
            android:progress="0"
            android:max="0"
            android:indeterminate="false"/>

        <!-- Main layout including last button row-->
        <LinearLayout
            android:id="@+id/layoutMainButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fragmentContainerPresetCards"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:weightSum="1">

            <!-- Main layout -->
            <LinearLayout
                android:id="@+id/layoutMain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutSets"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:maxLines="1"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:textColor="@color/bpRed"
                        android:id="@+id/textViewSets"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layoutTimer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textViewTimerSeconds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:singleLine="true"
                            android:textSize="260sp"
                            android:maxLines="1"
                            android:text="10"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:lineSpacingExtra="0dp"
                            android:textColor="@color/default_color_running" />

                        <!-- TextView is gone below 60 seconds -->
                        <TextView
                            android:id="@+id/textViewTimerLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:singleLine="true"
                            android:textSize="120sp"
                            android:maxLines="1"
                            android:text="10"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"
                            android:lineSpacingExtra="0dp"
                            android:textColor="@color/default_color_running" />

                        <!-- TextView is gone below 60 seconds -->
                        <TextView
                            android:id="@+id/textViewTimerSeparator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textSize="120sp"
                            android:text="'"
                            android:visibility="gone"
                            android:textAlignment="center"
                            android:lineSpacingExtra="0dp"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:textColor="@color/default_color_running" />

                        <!-- TextView is gone below 60 seconds -->
                        <TextView
                            android:id="@+id/textViewTimerRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textSize="120sp"
                            android:text="00"
                            android:visibility="gone"
                            android:textAlignment="textStart"
                            android:lineSpacingExtra="0dp"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:textColor="@color/default_color_running"/>

                    </LinearLayout>

                </RelativeLayout>

                <!-- FULL layout mode buttons -->
                <LinearLayout
                    android:id="@+id/layoutFullButtons"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"
                    android:visibility="invisible"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:id="@+id/imageButtonTimerPlus"
                        android:src="@drawable/ic_timer_minus_30"
                        android:tint="@color/timer_font_color"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights" />

                    <ImageButton
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="3"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="false"
                        android:layout_gravity="center"
                        android:id="@+id/imageButtonKeepScreenOn"
                        android:src="@drawable/ic_screen"
                        android:tint="@color/timer_font_color"
                        android:background="?selectableItemBackgroundBorderless" />

                    <ImageButton
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:id="@+id/imageButtonTimerMinus"
                        android:src="@drawable/ic_timer_plus_30"
                        android:tint="@color/timer_font_color"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- Last buttons row -->
            <LinearLayout
                android:id="@+id/layoutBottomButtons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingBottom="8dp"
                android:visibility="invisible"
                android:orientation="horizontal"
                android:weightSum="7" >

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:tint="@color/timer_font_color"
                    android:id="@+id/imageButtonTimerPlusMulti"
                    android:src="@drawable/ic_timer_plus_30"
                    android:background="?selectableItemBackgroundBorderless" />

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageButtonLeft"
                    android:src="@drawable/ic_chronometer_reset"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <ImageButton
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="false"
                    android:layout_gravity="center"
                    android:id="@+id/imageButtonCenter"
                    android:src="@drawable/ic_play_circle_black"
                    android:layout_weight="3"
                    android:background="?selectableItemBackgroundBorderless" />

                <ImageButton
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:id="@+id/imageButtonRight"
                    android:src="@drawable/ic_chevron_right"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/imageButtonTimerMinusMulti"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:tint="@color/timer_font_color"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_timer_minus_30"
                    android:background="?selectableItemBackgroundBorderless" />

        </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
