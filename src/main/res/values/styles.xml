<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="actionOverflowButtonStyle">@style/dotsWhiteTheme</item>
    </style>

    <style name="notificationButton" parent="@android:style/Widget.Material.ProgressBar.Horizontal" >
        <item name="android:progressBackgroundTintMode">src_in</item>
        <item name="android:progressBackgroundTint">@color/colorPrimaryLight</item>
        <item name="android:progressTintMode">src_in</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="notificationImageButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlHighlight">#40000000</item>
    </style>

    <style name="dotsWhiteTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/bpWhite</item>
    </style>
</resources>