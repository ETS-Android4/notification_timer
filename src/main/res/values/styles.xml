<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="actionOverflowButtonStyle">@style/dotsWhiteTheme</item>
        <item name="android:itemTextAppearance">@style/menuTextStyle</item>
        <item name="android:itemBackground">@color/menu_background</item>
        <item name="android:dialogTheme">@style/AlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="notificationButton" parent="@android:style/Widget.Material.ProgressBar.Horizontal" >
        <item name="android:progressBackgroundTintMode">src_in</item>
        <item name="android:progressBackgroundTint">@color/colorPrimaryLight</item>
        <item name="android:progressTintMode">src_in</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="notificationImageButton" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorControlHighlight">#40000000</item>
    </style>

    <style name="dotsWhiteTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/bpWhite</item>
    </style>

    <style name="menuTextStyle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColor">@color/menu_font_color</item>
    </style>

    <style name="PreferencesTheme" parent="AppTheme">
        <item name="android:colorAccent">@color/colorPrimaryPreferences</item>
        <item name="android:textColor">@color/preferences_text_color</item>
        <item name="android:textColorSecondary">@color/preferences_text_color_secondary</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/alert_dialog_background</item>
        <item name="android:textColor">@color/alert_dialog_button_text_color</item>
        <item name="android:textColorPrimary">@color/alert_dialog_font_color</item>
        <item name="colorAccent">@color/alert_dialog_button_text_color</item>
        <item name="android:textColorAlertDialogListItem">@color/alert_dialog_font_color</item>
    </style>
</resources>